{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "entryFile": "main",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "**/*.json",
        "outDir": "./dist",
        "watchAssets": true
      },
      {
        "include": "locations/data/**/*",
        "outDir": "./dist",
        "watchAssets": true
      }
    ]
  }
}
